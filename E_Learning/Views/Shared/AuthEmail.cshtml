<div class="body">
    <div class="login-container">
        <h2>Forget Password</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="SendResetPasswordEmail" asp-controller="Account" asp-area="Authentication"  method="post">
            <div class="input-group">
                <label>Email Address</label>
                <input type="email" required name="email" value="@Model">
            </div>
            
            <button type="submit" class="submit-btn">Send Reset Code</button>
        </form>
    </div>
</div>
