<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        /* Navbar styling */
        .navbar {
            background-color: #2c3e50;
            padding: 15px;
            display: flex;
            align-items: center;
        }

        .navbar-left,
        .navbar-right {
            display: flex;
            align-items: center;
            flex-shrink: 0;
        }

        /* LearnSphere text styling and hover effect */
        .learn-sphere {
            text-decoration: none;
            font-size: 2em;
            /* Keep LearnSphere font larger */
            color: white;
            transition: all 0.3s ease;
        }

        .sphere {
            color: #3498db;
        }

        .learn-sphere:hover {
            color: #1abc9c;
            transform: scale(1.05);
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

        /* General font-size for all other text */
        .navbar-left,
        .navbar-right,
        .auth-links a,
        .my-learning,
        .user-profile,
        .search-bar,
        .dropdown-content a {
            font-size: 0.9em;
        }

        /* Categories dropdown styling */
        .categories {
            font-size: 0.9em;
            margin-left: 30px;
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0; /* Align dropdown to the right */
            top: 57%; /* Place it directly below the button */
            background-color: #f9f9f9;
            width: 200px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .categories:hover .dropdown-content {
            display: block;
        }

        .dropdown-content .subcategory {
            position: relative;
        }

            .dropdown-content .subcategory .sub-dropdown {
                display: none;
                position: absolute;
                left: 201px;
                top: 0;
                background-color: #f9f9f9;
                width: 200px;
            }

        .subcategory:hover .sub-dropdown {
            display: block;
        }

        /* Search bar styling */
        .search-container {
            flex-grow: 1;
            display: flex;
            height: 35px;
            justify-content: center;
            margin-left: 20px;
            margin-right: 20px;
        }

        .search-bar {
            width: 100%;
            padding: 8px;
            border-radius: 20px;
            border: none;
        }

        /* My Learning */
        .my-learning {
            color: white;
            text-decoration: none;
            margin-left: 10px;
        }

        /* User profile and initials */
        .user-profile {
            color: #2c3e50;
            cursor: pointer;
            background-color: #ecf0f1;
            padding: 10px;
            border-radius: 50%;
            margin-left: 10px;
        }

        /* Login and Signup buttons */
        .auth-links {
            display: flex;
            align-items: center;
            margin-left: 10px;
        }

            .auth-links a {
                color: white;
                text-decoration: none;
                padding: 10px 20px;
                border: 2px solid white;
                border-radius: 4px;
                margin-left: 10px;
            }

                .auth-links a:hover {
                    background-color: white;
                    color: #2c3e50;
                }

        /* Profile dropdown */
        .user-profile {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            left: 0;
            margin-top: 10px;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .bordered-element {
            border: 2px solid #e4dcdc;
            padding: 15px;
            width: 70px;
            height: 20px;
            margin: 20px;
            border-radius: 5px;
        }

        p {
            font-size: 20px;
        }

        a {
            color: white;
            text-decoration: none;
        }
        /* Dropdown menu hidden initially */
        .dropdown {
            display: none;
            position: absolute;
            top: 37px;
            right: 0;
            width: 300px;
            background-color: #ecf0f1;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 1;
            text-align: left;
            border: #ccc;
        }

            /* Show the dropdown when hovering over user profile or dropdown */
            .user-profile:hover .dropdown,
            .dropdown:hover {
                display: block;
            }

            /* Links inside dropdown */
            .dropdown a {
                text-decoration: none;
                color: #2c3e50;
                font-size: 14px;
                display: block;
                padding: 10px 0;
            }

                .dropdown a:hover {
                    color: #1abc9c;
                }

            /* Dropdown div items with a thin bottom border */
            .dropdown a {
                margin-bottom: 10px;
                padding-bottom: 10px;
                padding-top: 5px;
                font-size: 14px;
                font-weight: bold;
                padding-left: 15px;
            }

            .dropdown p {
                color: #2c3e50;
                font-size: 14px;
                font-weight: bold;
                padding-left: 15px;
            }

            /* Remove the border from the last item */
            .dropdown div:last-child {
                border-bottom: none;
            }

    </style>
    <title>LearnSphere</title>
</head>

<body>
    <!-- Top navbar -->
    <nav>
        <div class="navbar">
            <!-- Left part of the navbar -->
            <div class="navbar-left">
                <a href="#" class="learn-sphere">Learn<span class="sphere">Sphere</span></a>

                <!-- Categories with subcategories -->
                <div class="categories">
                    <span class="learn-sphere" style="font-size: 18px;">Categories</span>
                    <div class="dropdown-content">
                        <div class="subcategory">
                            <a href="#">Programming</a>
                            <div class="sub-dropdown">
                                <a href="#">Web Development</a>
                                <a href="#">Mobile Development</a>
                                <a href="#">Data Science</a>
                            </div>
                        </div>
                        <div class="subcategory">
                            <a href="#">Design</a>
                            <div class="sub-dropdown">
                                <a href="#">Graphic Design</a>
                                <a href="#">UI/UX</a>
                            </div>
                        </div>
                        <a href="#">Marketing</a>
                        <a href="#">Business</a>
                    </div>
                </div>
            </div>

            <!-- Search bar in the center -->
            <div class="search-container">
                <input type="text" class="search-bar" placeholder="Search...">
            </div>

            <!-- Right part of the navbar -->
            <div class="navbar-right">
                <a href="#" class="my-learning">My Learning</a>

                <!-- Authentication links (Login and Signup) -->
                <div class="auth-links">
                    <a href="#">Login</a>
                    <a href="#">Sign Up</a>
                </div>

                <!-- User profile with initials -->
                <div class="user-profile">MH
                    <div class="dropdown">
                        <p>Weclome Mohamed Hakim</p>
                        <hr>
                        <a href="#">Profile</a>
                        <hr>
                        <a href="#" id="settings-link">Account Settings</a>
                        <a href="#">Payout & Tax</a>
                        <hr>
                        <a href="#" id="language-link">Language</a>
                        <hr>
                        <a href="#">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Placeholder for view content -->
    <div style="min-height: calc(100vh - 300px);">
        <!-- Adjust min-height based on header and footer height -->
        @RenderBody() <!-- This is where the view content will be injected -->
    </div>

    @{
        Html.RenderPartial("FooterPartial");
    };


</body>

</html>
