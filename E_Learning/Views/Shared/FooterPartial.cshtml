<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
        display: flex;
        flex-direction: column;
    }
    .footer {
        background-color: #2c3e50;
        /* Background color for footer */
        padding-top: 20px;
        color: white;
        /* Text color for footer */
        margin-bottom: 0;
        text-align: left; /* Align all text to the left */
    }

    .footer-columns {
        display: flex;
        /* Flexbox for columns */
        gap: 20px;
        /* Space between columns */
    }

    .footer-column {
        display: inline-block;
        /* Allow inline-block for each column */
        text-align: left;
        /* Align text to the left */
        margin-right: 100px;
        /* Space between columns */
    }

    

    .footer-container {
        display: flex;
        /* Flexbox for footer items */
        justify-content: space-between;
        /* Space between left and right items */
        align-items: center;
        /* Center items vertically */
        margin-top: 8px;
        /* Margin above footer container */
        padding: 10px;
        /* Padding inside footer container */
    }
    /* LearnSphere text styling and hover effect */
    .learn-sphere {
        text-decoration: none;
        font-size: 2em;
        /* Keep LearnSphere font larger */
        color: white;
        transition: all 0.3s ease;
    }   

    .sphere {
        color: #3498db;
    }

    .learn-sphere:hover {
        color: #1abc9c;
        transform: scale(1.05);
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }
    a {
        color: white;
        text-decoration: none;
        font-weight: bold;
    }
    p {
        font-size: 20px;
    }

    .right-align {
        text-align: left; /* Change this to left */
    }
</style>

