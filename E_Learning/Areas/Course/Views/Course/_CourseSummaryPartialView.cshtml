@using E_Learning.Areas.Course.Models


@model CourseView


<div class="container py-5">
		<div class="section-col-max mx-auto">
			<h3 class="section-title mb-5">What's Included</h3>

			<div class="data-summary justify-content-center text-center">
				<div class="row mb-5">
					<div class="item col-6 col-lg-3 mb-3 mb-lg-0">
						<div class="data">@Model.numofSections +</div>
						<div class="meta">Modules</div>
					</div><!--//item-->
					<div class="item col-6 col-lg-3 mb-3 mb-lg-0">
					<div class="data">@ViewBag.NumberOfLessons +</div>
						<div class="meta">Videos</div>
					</div><!--//item-->
					<div class="item col-6 col-lg-3 mb-3 mb-lg-0">
						<div class="data">@Model.level</div>
						<div class="meta">Course Level</div>
					</div><!--//item-->
					<div class="item col-6 col-lg-3 mb-3 mb-lg-0">
						<div class="data">@Model.totalHours</div>
				<div class="meta">Hours</div>
				</div>
			</div><!--//item-->
		</div><!--//row-->
</div><!--//course-summary-->
