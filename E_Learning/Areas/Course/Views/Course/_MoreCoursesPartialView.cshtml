@{
}
@using E_Learning.Areas.Home.Models;

@model List<CourseCardDetails>;


<div id="section-more" class="section section-related py-5">
	<div class="container">
		<h3 class="section-title mb-5">More Courses You May Like</h3>
		<div class="related-items row">
			@for (int i = 0; i < 3; i++)
			{
				<div class="col-12 col-lg-4 mb-4 mb-lg-0">
					<div class="item">
					<div class="item-thumb">
						<img class="img-fluid rounded-top" src="~/images/Courses/@Model[i].Image" alt="">
					</div><!--//thumb-holder-->
					<div class="item-desc p-4 rounded-bottom">
							<h4 class="title mb-3"><a href="@Model[i].Id">@Model[i].Title</a></h4>
							<div class="summary mb-3">@Model[i].Summary</div>
						<div class="text-center">
								<a class="btn btn-ghost btn-block" href="@Model[i].Id">Find out more</a>
						</div>
					</div><!--//desc-->

				</div><!--//item-->
			</div><!--//col-->
			}
		</div><!--//row-->
	</div><!--//container-->
</div><!--//section-8-->
